<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.x_ogame.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:useDefaultMargins="false"
        android:transitionGroup="false"
        android:touchscreenBlocksFocus="false"
        android:background="#00ffffff"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/b6"
            android:layout_row="1"
            android:layout_column="2"
            android:visibility="visible"
            android:onClick="onClick"
            android:textSize="30dp"
            android:textColor="#44dc26" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/b4"
            android:layout_row="1"
            android:layout_column="0"
            android:visibility="visible"
            android:onClick="onClick"
            android:textSize="30dp"
            android:textColor="#37c02b" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/b5"
            android:layout_row="1"
            android:layout_column="1"
            android:visibility="visible"
            android:onClick="onClick"
            android:textSize="30dp"
            android:textColor="#2cd823" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/b2"
            android:layout_row="0"
            android:layout_column="1"
            android:visibility="visible"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:onClick="onClick"
            android:textSize="30dp"
            android:textColor="#3ad31b" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/b3"
            android:layout_row="0"
            android:layout_column="2"
            android:visibility="visible"
            android:onClick="onClick"
            android:textSize="30dp"
            android:textColor="#43cd19" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/b1"
            android:layout_row="0"
            android:layout_column="0"
            android:visibility="visible"
            android:onClick="onClick"
            android:textSize="30dp"
            android:textColor="#4be229" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/b9"
            android:layout_row="2"
            android:layout_column="2"
            android:visibility="visible"
            android:onClick="onClick"
            android:textSize="30dp"
            android:textColor="#41c91b" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/b7"
            android:layout_row="2"
            android:layout_column="0"
            android:visibility="visible"
            android:onClick="onClick"
            android:textSize="30dp"
            android:textColor="#40b92a" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/b8"
            android:layout_row="2"
            android:layout_column="1"
            android:visibility="visible"
            android:onClick="onClick"
            android:textSize="30dp"
            android:textColor="#23d119" />
    </GridLayout>

</RelativeLayout>
